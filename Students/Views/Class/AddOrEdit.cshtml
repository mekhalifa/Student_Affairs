@model DAL.ViewModels.ClassVM
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Class", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)

    <div class="row">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name,null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
     
    </div>
  

    <div class="form-group ">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}


